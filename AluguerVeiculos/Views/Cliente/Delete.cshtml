@model AluguerVeiculos.Models.Cliente

@{
    ViewData["Title"] = "Eliminar Cliente";
}

<h1 class="text-center">Eliminar Cliente</h1>

<p class="text-center">Tens a certeza de que desejas eliminar o cliente abaixo?</p>

<div class="text-center">
    <ul class="list-unstyled">
        <li><strong>Nome:</strong> @Model.Nome_Completo</li>
        <li><strong>Email:</strong> @Model.Email</li>
        <li><strong>Telefone:</strong> @Model.Telefone</li>
        <li><strong>Carta de Condução:</strong> @Model.Carta_de_Conducao</li>
    </ul>
</div>

<div class="text-center mt-4">
    <form asp-action="Delete" method="post" style="display: inline-block;">
        <input type="hidden" asp-for="Id" />
        <button type="submit" class="btn btn-danger">Eliminar</button>
    </form>
    <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
</div>
